shopt -s \
    dotglob \
    extglob

PATH="${HOME}/.local/bin:${PATH}"

export PS1='\[\e[1m\]\W ‚ùØ \[\e[0m\]'
export EDITOR=vi


function sourceDir {
    local FILE
    for FILE in "${1}"/*; do
        source "${FILE}"
    done
}


sourceDir "${HOME}/.config/dotfiles/pre"

source "${HOME}/.dotfiles/ls/init"
source "${HOME}/.dotfiles/grep/init"
source "${HOME}/.dotfiles/direnv/init"
source "${HOME}/.dotfiles/cargo/init"
source "${HOME}/.dotfiles/vscode/init"

sourceDir "${HOME}/.config/dotfiles/post"
