{
  "title": "Left arrow to control",
  "rules": [
    {
      "description": "Change left_arrow to control if pressed with other keys, to left_arrow if pressed alone",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "left_arrow",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "right_control"
            }
          ],
          "to_if_alone": [
            {
              "key_code": "left_arrow"
            }
          ]
        }
      ]
    }
  ]
}
