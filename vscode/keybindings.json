[
    // Explorer
    // - Behave the same as "space" (can keep my finger on ctrl)
    {
        "key": "ctrl+space",
        "command": "filesExplorer.openFilePreserveFocus",
        "when": "explorerViewletVisible && filesExplorerFocus && !explorerResourceIsFolder && !inputFocus"
    },

    // - Open in the current editor group instead of "to the side" in a new split
    {
        "key": "ctrl+enter",
        "command": "list.select",
        "when": "explorerViewletVisible && filesExplorerFocus && !explorerResourceIsFolder && !inputFocus"
    },

    // Vim nav for the terminal panel (right side)
    {
        "key": "ctrl+w j",
        "command": "workbench.action.terminal.focusNextPane",
        "when": "vim.active && terminalFocus"
    },
    {
        "key": "ctrl+w k",
        "command": "workbench.action.terminal.focusPreviousPane",
        "when": "vim.active && terminalFocus"
    },
    {
        "key": "ctrl+w h",
        "command": "workbench.action.focusActiveEditorGroup",
        "when": "vim.active && terminalFocus"
    },

    // Vim nav for the explorer (left side)
    // - Open editors and file explorer
    {
        "key": "ctrl+w k",
        "command": "workbench.files.action.focusOpenEditorsView",
        "when": "vim.active && filesExplorerFocus"
    },
    {
        "key": "ctrl+w j",
        "command": "workbench.files.action.focusFilesExplorer",
        "when": "vim.active && openEditorsFocus"
    },
    {
        "key": "ctrl+w l",
        "command": "workbench.action.focusActiveEditorGroup",
        "when": "vim.active && explorerViewletFocus"
    },

    // - Outline
    {
        "key": "ctrl+w j",
        "command": "outline.focus",
        "when": "vim.active && filesExplorerFocus"
    },
    {
        "key": "ctrl+w k",
        "command": "workbench.files.action.focusFilesExplorer",
        "when": "vim.active && outlineFocused"
    },
    {
        "key": "ctrl+w l",
        "command": "workbench.action.focusActiveEditorGroup",
        "when": "vim.active && outlineFocused"
    }
]